<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.cesar.carservice.ReadTagActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar por"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rbTag"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:id="@+id/rgSearchBy">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tag"
            android:id="@+id/rbTag"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Placa"
            android:id="@+id/rbPlate"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Número de serie"
            android:layout_height="wrap_content"
            android:id="@+id/rbSerie"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:id="@+id/viewTag">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_tag"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de tag"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="número de tag"
                android:inputType="textCapCharacters"
                android:id="@+id/etTag"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:id="@+id/viewPlate">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_license_plate"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de placa"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:hint="número de placa"
                android:id="@+id/etLicensePlate"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:id="@+id/viewSerial">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_serial_number"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de serie"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="número de serie"
                android:inputType="textCapCharacters"
                android:id="@+id/etSerialNumber"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnSearch"
        android:layout_gravity="bottom"/>
    <!--RFID  Change Visibility to "view" to implement-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="número de tag"
        android:inputType="text"
        android:id="@+id/etEPC"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtStatus"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leer TAG"
        android:id="@+id/btnReadTAG"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <!--RFID-->
</LinearLayout>